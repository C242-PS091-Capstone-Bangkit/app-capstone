<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient Background -->
    <gradient
        android:startColor="@color/white"
        android:endColor="@color/pink"
        android:angle="45" />

    <!-- Rounded Corners -->
    <corners android:radius="16dp" />

    <!-- Optional Stroke -->
    <stroke
        android:width="1dp"
        android:color="@color/pink" />

    <!-- Optional Padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
